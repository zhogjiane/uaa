<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.conifercone.uaa.mapper.OAuth2Mapper">
    <select id="queryClientInfoByClientId" resultType="com.conifercone.uaa.domain.entity.SysOAuth2Client">
        select id,
               client_id,
               client_secret,
               allow_url,
               contract_scope,
               create_by,
               create_time,
               update_by,
               update_time,
               removed,
               tenant_id
        from sys_oauth2_client
        <where>
            <if test="clientId != null and clientId != ''">
                client_id = #{clientId,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>